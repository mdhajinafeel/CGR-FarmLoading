<resources>
    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CodrinGreenFarm" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_farm_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/notificationBarColor</item>
        <item name="colorPrimaryDark">@color/secondaryColor</item>
    </style>
    <style name="TextHint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
    <style name="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="progress_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateVisible|adjustResize</item>
    </style>
    <style name="style_TitleText_editText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>
    <style name="Style_EditText_withBorder" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:background">@drawable/rectangle_border_black</item>
    </style>
    <style name="Style_EditText_withBorder_Disabled" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:background">@drawable/rectangle_border_disabled</item>
    </style>
    <style name="DialogTheme">
        <item name="windowFixedWidthMajor">70%</item>
        <item name="windowFixedWidthMinor">70%</item>
    </style>
    <style name="style_TitleText_editText1" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>
    <style name="Style_EditText_withBorder0dp" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:background">@drawable/rectangle_border_black</item>
    </style>
    <style name="KeyButton">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@color/notificationBarColor</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>